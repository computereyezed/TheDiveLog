@page "/viewdiver"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

<h3>View Diver Information</h3>

@{
    string title = string.Empty;
}

@if (AppState.IsAuthenticated)
{
    @if (diverview == null)
    {
        title = "Loading...";
    }
    else if (diverview.Certs.Count < 1)
    {
        <div class="row">
            <div class="col-sm-3 form-group">
                <a class="btn btn-success" href="divelog/addeditdiver/false/0" data-toggle="tooltip" data-placement="auto" title="New Diver"><i class="oi oi-plus"></i></a>
            </div>
            <div class="col-sm-3"><h5>No Records Found.</h5></div>
            <div class="col-sm-6 justify-content-end">
                <h5>Total HR's Bottom Time: 0</h5>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-sm-3 form-group">
                <a class="btn btn-success" href="divelog/addeditdiver/false/0" data-toggle="tooltip" data-placement="auto" title="New Diver"><i class="oi oi-plus"></i></a>
            </div>
            <div class="col-sm-3"><h5>Records Found: </h5></div>
            <div class="col-sm-6 justify-content-end">

            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                <EditForm Model="@dvr" OnValidSubmit="@SaveDiver">
                    <DataAnnotationsValidator />

                    <div class="row">
                        <div class="col-7">
                            <span class="field-label" title="First and Last Name">First and Last Name</span>
                            <br />
                            <input type="text" class="form-control form-control-lg" @bind="@dvr.DiverName" />
                            <ValidationMessage For="@(() => dvr.DiverName)" />
                        </div>
                        <div class="col-5">
                            <span class="field-label" title="Birthday">Birthday</span>
                            <br />
                            <input type="date" class="form-control form-control-lg" @bind="@dvr.Birthday" />
                            <ValidationMessage For="@(() => dvr.Birthday)" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <span class="field-label" title="Diver No.">Diver No.</span>
                            <br />
                            <input type="text" class="form-control form-control-lg" @bind="@dvr.DiverNo" />
                            <ValidationMessage For="@(() => dvr.DiverNo)" />
                        </div>
                        <div class="col-6">
                            <span class="field-label" title="Measurement">Measurement</span>
                            <br />
                            <input type="text" class="form-control form-control-lg" @bind="@dvr.MeasurementID" />
                            <ValidationMessage For="@(() => dvr.MeasurementID)" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <span class="field-label" title="Email">Email</span>
                            <br />
                            <input type="text" class="form-control form-control-lg" @bind="@dvr.Email" />
                            <ValidationMessage For="@(() => dvr.Email)" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-success">
                                @butontext
                            </button>
                        </div>
                    </div>

                </EditForm>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                <div class="row">
                    <div class="col-12 table">
                        <div class="lh-table-container">
                            <div class="lh-header-container">
                            </div>
                            <div class="lh-table-container-inner">
                                <table class="table table-condensed table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th class="lh-th"><div class="lh-th-bottomline"></div></th>
                                            <th class="lh-th"><div class="lh-th-bottomline">Date</div></th>
                                            <th class="lh-th"><div class="lh-th-bottomline">Certification</div></th>
                                            <th class="lh-th"><div class="lh-th-bottomline">InstrNo</div></th>
                                            <th class="lh-th"><div class="lh-th-bottomline">InstrName</div></th>
                                            <th class="lh-th"><div class="lh-th-bottomline"></div></th>
                                        </tr>
                                    </thead>
                                    <tbody class="rowlink" data-link="row">
                                        @foreach (DiverView.CertView cert in diverview.Certs)
                                        {
                                            <tr>
                                                <td class="lh-td">
                                                    @*<button @onclick="(() => GetCert(cert.Id))" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                                        <i class="oi oi-pencil"></i>
                                                    </button>*@
                                                    <a class="btn btn-transparent text-primary" data-toggle="modal" data-target="#exampleModal"><i class="oi oi-pencil"></i></a>
                                                    @*<a class="btn btn-transparent text-primary" href="divelog/addeditdiver/true/@cert.Id" data-toggle="tooltip" data-placement="auto" title="Edit Dive"><i class="oi oi-pencil"></i></a>*@
                                                </td>
                                                <td class="lh-td">@cert.CertDate?.ToString("MM/dd/yyyy")</td>
                                                <td class="col-1 lh-td">@cert.Certification</td>
                                                <td class="lh-td">@cert.InstrNo</td>
                                                <td class="lh-td">@cert.InstrName</td>
                                                <td class="lh-td">
                                                    <a class="btn btn-transparent text-danger" @onclick="@(() => Delete(cert.Id))" data-toggle="tooltip" data-placement="auto" title="Remove Dive"><i class="oi oi-delete"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <h1>Authentication Failure!</h1>
    <p>You're not signed in.</p>
}

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Hello
                @*<EditForm Model="certinfo" OnValidSubmit="@SaveDiver">
                    <h3>@certinfo.Id</h3>
                </EditForm>*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public DiverInformation dvr { get; set; }
    private bool act { get; set; }
    private string butontext = string.Empty;
    DiverView diverview { get; set; }
    Certifications certinfo { get; set; } = new Certifications();

    protected override async Task OnInitializedAsync()
    {
        diverview = await http.GetFromJsonAsync<DiverView>($"api/diver/byUserId?userid={AppState.UserId}");

        dvr = diverview.Diver;

        if (dvr == null)
        {
            act = false;
            butontext = "Save";
        }
        else
        {
            act = true;
            butontext = "Update";
        }

    }

    async Task Delete(long diverId)
    {
        if (await js.InvokeAsync<bool>("confirm", $"Do you want to delete diver {dvr.DiverName} record?"))
        {
            await http.DeleteAsync($"api/dive/{diverId}");
            await OnInitializedAsync();
        }
    }

    async Task GetCert(long certId)
    {
        certinfo = await http.GetFromJsonAsync<Certifications>($"api/diver/byCertId?certid={certId}");
    }


    async Task SaveDiver()
    {
        if (act)
        {
            await http.PutAsJsonAsync("api/diver", dvr);
            await js.InvokeVoidAsync("alert", $"Updated Suicessfully!");
            uriHelper.NavigateTo("viewdives");

        }
        else
        {
            await http.PostAsJsonAsync("api/diver", dvr);
            uriHelper.NavigateTo("viewdives");
        }
    }

}
